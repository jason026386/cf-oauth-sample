{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext",
      "ScriptHost"
    ],
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "include": [
    "./app",
    "./shared/**/*",
    "./shared/**/*.json",
    "./public/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/dist/**",
    "secure_data_saver",
    "worker",
    "examples",
    "legacy"
  ],
}